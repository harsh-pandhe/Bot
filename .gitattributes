# Automatically normalize line endings for all text files
* text=auto

# Python files
*.py text eol=lf
*.pyc binary

# Arduino/C++ files
*.ino text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.c text eol=lf

# Data files
*.csv text eol=lf
*.txt text eol=lf

# Markdown
*.md text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Binary files
*.hex binary
*.elf binary
*.o binary
*.pkl binary
*.joblib binary
